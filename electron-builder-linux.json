{
  "appId": "com.yourcompany.pos-system",
  "productName": "POS System",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "src/database/",
      "to": "database/",
      "filter": ["**/*"]
    }
  ],
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.png",
    "category": "Office",
    "desktop": {
      "Name": "POS System",
      "Comment": "Smart Restaurant Billing System",
      "Type": "Application",
      "Categories": "Office;"
    }
  },
  "publish": {
    "provider": "github",
    "owner": "your-github-username",
    "repo": "your-repo-name",
    "private": false,
    "releaseType": "release"
  },
  "afterAllArtifactBuild": "scripts/after-build.js"
} 