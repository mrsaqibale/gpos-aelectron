{
  "appId": "com.gpos.system",
  "productName": "GPOS System",
  "directories": {
    "output": "dist-professional"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "src/database/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "src/database/pos.db",
      "to": "database/pos.db"
    },
    {
      "from": "src/database/init.js",
      "to": "database/init.js"
    },
    {
      "from": "src/database/migrations",
      "to": "database/migrations"
    },
    {
      "from": "src/database/models",
      "to": "database/models"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "sign": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "GPOS System",
    "uninstallDisplayName": "GPOS System",
    "license": "LICENSE.txt",
    "include": "build/installer-professional.nsh",
    "installerLanguages": ["en_US"],
    "language": "1033",
    "multiLanguageInstaller": false,
    "displayLanguageSelector": false,
    "deleteAppDataOnUninstall": false,
    "runAfterFinish": true,
    "menuCategory": "Business",
    "perMachine": false
  },
  "publish": null
}

